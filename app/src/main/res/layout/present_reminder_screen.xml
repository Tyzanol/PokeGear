<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Present Reminder"
        android:textSize="40dp"
        android:background="#DCDCDC"
        android:textAlignment="center"
        android:padding="15dp"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/layout_border"
        tools:context=".info"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/button_red"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/button_yellow"
                tools:src="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/button_green"
                tools:src="@tools:sample/avatars" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send a PokemonGo friend a reminder that you
are waiting for them to open your gift"
            android:textColor="#FB0032"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewTimeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Friends:"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="20dp"/>

    <com.androidaena.pokegear.MultiSelectionSpinner
        android:id="@+id/input1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="20dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="#5096FA"
        android:text="Send Reminder"
        android:textSize="20dp" />
</LinearLayout>